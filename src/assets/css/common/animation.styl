/**
 * Animation
 *
 * @author: Giang Dao
 */
.v-slide-y-reverse-transition
  &-enter-active, &-leave-active
    transition-duration 0.6s

  &-enter, &-leave-to
    opacity 0
    transform translateY(50px)

  &-enter-to, &-leave
    opacity 1
    transform translateY(0)

.fade
  &-enter-active, &-leave-active
    transition-duration 0.6s

  &-enter, &-leave-to
    opacity 0

  &-enter-to, &-leave
    opacity 1

  &-1s
    &-enter-active, &-leave-active
      transition-duration 1s

    &-enter, &-leave-to
      opacity 0

    &-enter-to, &-leave
      opacity 1

.fade-down
  &-enter-active, &-leave-active
    transition-duration 0.6s

  &-enter, &-leave-to
    opacity 0.5
    transform translateY(-100%)

  &-enter-to, &-leave
    opacity 1
    transform translateY(0)

.slide-left-away
  &-enter-active, &-leave-active
    transition-duration 0.6s

  &-enter, &-leave-to
    transform translateY(-100%)

  &-enter-to, &-leave
    transform translateY(0)

.fade-in-up
  &-enter-active, &-leave-active
    transition-duration 0.6s

  &-enter, &-leave-to
    opacity 0
    transform translateY(20%)

  &-enter-to, &-leave
    opacity 1
    transform translateY(0)

  &-all
    &-enter-active, &-leave-active
      transition-duration 1s

    &-enter, &-leave-to
      opacity 0
      transform translateY(100%)

    &-enter-to, &-leave
      opacity 1
      transform translateY(0)

  &-short
    &-enter-active, &-leave-active
      transition-duration 1s

    &-enter, &-leave-to
      opacity 0
      transform translateY(20%)

    &-enter-to, &-leave
      opacity 1
      transform translateY(0)

  &-1s
    &-enter-active, &-leave-active
      transition-duration 1.2s

    &-enter, &-leave-to
      opacity 0
      transform translateY(20%)

    &-enter-to, &-leave
      opacity 1
      transform translateY(0)

.slide-up-away-1s
  &-enter-active, &-leave-active
    transition-duration 1.2s

  &-enter, &-leave-to
    transform translateY(-120%)

  &-enter-to, &-leave
    transform translateY(0)

.fade-in-slide-up-away-1s
  &-enter-active, &-leave-active
    transition-duration 1.2s

  &-enter
    opacity 0

  &-leave-to
    transform translateY(-120%)

  &-enter-to, &-leave
    transform translateY(0)
    opacity 1